{
  "crons": [
    {
      "path": "/api/cron/unverified-users",
      "schedule": "0 0 * * *"
    }
  ],
  "redirects": [
    { "source": "/user/:path", "destination": "/u/:path", "permanent": true },
    {
      "source": "/profile/:path",
      "destination": "/u/:path",
      "permanent": true
    },
    { "source": "/author/:path", "destination": "/u/:path", "permanent": true },

    { "source": "/bot/:path", "destination": "/b/:path", "permanent": true },
    { "source": "/ai/:path", "destination": "/b/:path", "permanent": true },
    {
      "source": "/chatbot/:path",
      "destination": "/b/:path",
      "permanent": true
    },

    { "source": "/chat", "destination": "/c/p", "permanent": true },

    { "source": "/pro", "destination": "/c/p", "permanent": true },
    { "source": "/chat/pro", "destination": "/c/p", "permanent": true },
    { "source": "/c/pro", "destination": "/c/p", "permanent": true },
    { "source": "/chat/p", "destination": "/c/p", "permanent": true },

    { "source": "/browse", "destination": "/", "permanent": true },
    { "source": "/search", "destination": "/", "permanent": true }
  ]
}
