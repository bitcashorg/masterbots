{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"./apps/masterbots.ai/.next",
			"./apps/web/.next",
			".vercel",
			".vscode",
			"node_modules",
			"bun.lock",
			"./packages/mb-genql/generated",
			"./packages/mb-genql/generated/runtime"
		]
	},
	"formatter": { "enabled": true, "indentStyle": "tab", "indentWidth": 2 },
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"recommended": true,
				"noYodaExpression": "error",
				"noNonNullAssertion": "warn",
				"noUselessElse": "error",
				"useForOf": "error",
				"useImportType": "error"
			},
			"correctness": {
				"recommended": true,
				"noEmptyPattern": "warn"
			},
			"suspicious": {
				"recommended": true,
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn"
			},
			"performance": {
				"recommended": true,
				"noAccumulatingSpread": "warn"
			}
		}
	},
	"javascript": {
		"formatter": { "quoteStyle": "single", "semicolons": "asNeeded" }
	}
}
