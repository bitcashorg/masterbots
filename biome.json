{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "include": ["**/*.ts", "**/*.tsx"],
    "rules": {
      "style": {
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "info",
        "noCommaOperator": "off",
        "recommended": true
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}