    "turbo": "^1.11.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.0.14",
  "dependencies": {
    "@stripe/react-stripe-js": "^2.7.1",
    "@stripe/stripe-js": "^3.5.0",
    "lottie-react": "^2.4.0",
    "nextjs-toploader": "^1.6.4"
  }
}