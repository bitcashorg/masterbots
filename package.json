{
  "name": "masterbots",
  "version": "1.0.0",
  "description": "Monorepo for Masterbots application",
  "author": "Jun Dam <jun@bitcash.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo build --no-daemon",
    "dev": "turbo dev --no-daemon --parallel",
    "lint": "turbo lint --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.4.1",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "turbo": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.0.14"
}