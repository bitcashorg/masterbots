{
  "name": "masterbots",
  "version": "1.0.0",
  "description": "Masterbots AI Monorepo",
  "author": "bitcash.org",
  "license": "MIT",
  "private": true,
  "packageManager": "bun@1.0.14",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "turbo build --no-daemon",
    "dev": "turbo dev --no-daemon --parallel",
    "lint": "turbo lint --no-daemon",
    "lint:fix": "turbo lint:fix --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.4.1",
    "@repo/tailwind-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "typescript": "5.3.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{md,mdx,mjs,yml,yaml,css}": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  },
  "dependencies": {
    "ts-case-convert": "^2.0.7"
  }
}